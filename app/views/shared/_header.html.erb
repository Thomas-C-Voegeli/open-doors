<div class="header">
  <div class="header-buttons">
    <div class="container">
      <div class="row">
        <div class="col-md-3"><h1>OpenDoors</h1></div>
        <% if current_user != nil %>
          <div class = "col-md-6"></div>
          <div class = "col-md-2"><span id="greeting">Logged in as <span class="greeting-email"><%= @user.email %></span></span></div>
          <div class = "col-md-1">
            <div class="dropdown">
              <a id="user-menu" data-target="#" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                <i class="glyphicon glyphicon-cog" aria-hidden="true"></i>
              </a>
              <ul class="dropdown-menu dropdown-menu-right" aria-labelledby="user-menu">
                <li><a href="/users/edit">My account</a></li>
                <li><%= link_to "Log out", logout_path %></li>
              </ul>
            </div>
          </div>
        <% else %>
          <div class="col-md-7"></div>
            <div class="col-md-2">
              <%= link_to 'Login', '/login' %> | <%= link_to 'Signup', '/signup' %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>